---
import type { CollectionEntry } from 'astro:content'
import { CLS_COLOR_DIVIDER } from '$configs/colors'
import PostPreviewItem from '$components/post-preview-item.astro'

type Props = {
  posts: CollectionEntry<'blog'>[]
  nextPost?: CollectionEntry<'blog'> | null | undefined
  prevPost?: CollectionEntry<'blog'> | null | undefined
}
const { posts, nextPost, prevPost } = Astro.props
---

<ul class:list={['grid grid-cols-1 divide-y divide-dashed', CLS_COLOR_DIVIDER]}>
  {posts.map((post) => <PostPreviewItem post={post} />)}
  {nextPost ? <PostPreviewItem post={nextPost} arrow='next' /> : null}
  {prevPost ? <PostPreviewItem post={prevPost} arrow='prev' /> : null}
</ul>
