---
import { Picture, type LocalImageProps } from 'astro:assets'
import FigureCaption from './figure-caption.astro'
type Props = {
  src: LocalImageProps['src']
  alt: string
  priority?: boolean
}
const { src, alt, priority } = Astro.props
---

<FigureCaption>
  <Picture
    src={src}
    alt={alt}
    layout='responsive'
    formats={['avif', 'webp', 'jpeg']}
    fit='cover'
    position='center'
    priority={!!priority}
    sizes='48rem'
    class='block mx-auto'
    slot='fig'
  />
  <slot>{alt}</slot>
</FigureCaption>
