---
import FormattedDate from '@/components/core/formatted-date.astro'
import Link from '@/components/core/link.astro'
import type { PostContent } from '@/utils/post-content.utils'

type Props = {
  postContent: PostContent
  arrow: 'to-left' | 'to-right' | 'none' | undefined
  headingLevel: 'h2' | 'h3'
}

const { postContent, arrow, headingLevel: Hx } = Astro.props
const { post, category } = postContent
const { title, description, publishedOn } = post.data
---

<div class='px-4 py-4 relative flex flex-col gap-y-1 hover:shadow'>
  <Hx class='flex items-center text-lg'>
    <Link
      href={`/post/${post.id}`}
      class="after:absolute after:top-0 after:left-0 after:right-0 after:bottom-0 after:content-[' '] flex items-center"
    >
      {arrow === 'to-left' ? <span class='mr-2'>←</span> : null}
      <span>{title}</span>
      {arrow === 'to-right' ? <span class='ml-2'>→</span> : null}
    </Link>
  </Hx>
  <div class='text-xs divide-x divide-base-300'>
    <span class='pr-2'>
      <Link href={`/category/${category.id}`}>{category.data.name}</Link>
    </span>
    {publishedOn ? <FormattedDate date={publishedOn} class='px-2' /> : <span class='px-2'>In Draft</span>}
  </div>
  <p>{description}</p>
</div>
