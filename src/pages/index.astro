---
import Author from '$components/author.astro'
import Layout from '$layout'
import { getBlogPostContent } from 'src/utils/content.utils'
import { CLS_SECTION_HEADINGS } from '$configs/colors'
import PostList from '$components/post-list.astro'

const posts = await getBlogPostContent()
---

<Layout title='Sujeet' description='Personal Site'>
  <Author />
  <section>
    <p class='text-xl font-light'>
      Making the world a better place through <strong>quality software</strong>.
    </p>
  </section>
  <section>
    <h2 class:list={[CLS_SECTION_HEADINGS, 'mt-14 mb-8']}>Writings</h2>
    <PostList posts={posts} />
  </section>
</Layout>
