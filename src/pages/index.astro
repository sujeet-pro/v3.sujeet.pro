---
import imgSujeet from '@/assets/sujeet.jpg'
import { Image } from 'astro:assets'

import Link from '@/components/core/link.astro'
import CvIcon from '@/components/icons/cv-icon.astro'
import Linkedin from '@/components/icons/linkedin.astro'
import Layout from '@/components/layout/index.astro'
import PostDetailedList from '@/components/post/post-detailed-list.astro'
import { REDIRECTION_MAP } from '@/configs/redirection'
import { getPostContents } from '@/utils/post-content.utils'

const postContents = await getPostContents({ onlyFeatured: true })
---

<Layout title='Sujeet' description='Personal Site'>
  <main id='main-content'>
    <section class='flex flex-col md:flex-row gap-y-2 gap-x-4 items-center my-8'>
      <div>
        <Image src={imgSujeet} alt='Sujeet Jaiswal' class='rounded-full w-24 h-24' />
      </div>
      <div>
        <h1 class='text-4xl font-light text-center md:text-left'>Sujeet Jaiswal</h1>
        <p class='my-2'>Principal Software Engineer, Bangalore - India</p>
        <nav class='flex flex-wrap gap-x-4 gap-y-1'>
          <Link href={REDIRECTION_MAP['/linkedin']} target='_blank' class='flex items-center gap-1'>
            Connect @ LinkedIn <Linkedin />
          </Link>
          <Link href={REDIRECTION_MAP['/cv']} target='_blank' class='flex items-center gap-1'>
            View My CV <CvIcon />
          </Link>
        </nav>
      </div>
    </section>

    <section>
      <p class='text-xl font-light'>
        Making the world a better place through <strong>quality software</strong>.
      </p>
    </section>
    <section>
      <header class='flex justify-between items-center mt-14 mb-8'>
        <h2 class='text-2xl font-light italic'>Writings</h2>
        <Link href='/post'>Read all posts</Link>
      </header>
      <PostDetailedList {postContents} filterable={false} headingLevel='h3' />
    </section>
  </main>
</Layout>
